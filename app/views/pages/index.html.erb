<div class="card-container">
  <% if @letter_cocktails.nil? %>
    <h1>No cocktails found</h1>
  <% else %>
    <% @letter_cocktails.each do |cocktail| %>
      <div class="card">
      <img class="card-img-top" src=<%= cocktail["strDrinkThumb"] %> alt="Card image cap">
        <div class="card-body">
          <h2 class="card-title"><%= cocktail["strDrink"] %></h2>
          <p class="card-text"><%= cocktail["strCategory"] %></p>
          <p class="card-text"><%= link_to "More Info", cocktail_path({id: cocktail["idDrink"]}) %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>